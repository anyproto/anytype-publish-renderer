package renderer

templ FileImageTemplate(r *Renderer, p *FileImageRenderParams) {
	<div id={"block" + p.Id } class={"block blockMedia isImage index0 withContent", p.Classes}>
		<div class="content">
			<div class="flex">
				<div class={"wrap", imageSizeCss(string(p.ImageWidth))}>
					<img src={ p.Src } class="mediaImage" />
				</div>
			</div>
		</div>
	</div>
}

func imageSize(width string) templ.SafeCSSProperty {
	return templ.SafeCSSProperty(width);
}
css imageSizeCss(width string) {
	width: { imageSize(width) };
}

templ FilePDFTemplate(r *Renderer, p *FilePDFRenderParams) {
	<div id={"block" + p.Id } class={"block blockMedia"}>
		<div class="content">
			<div class="flex">
				<iframe id={"pdf-"+p.Id}
						width="100%"
						height="1000px"
						src={ p.Src }>
				</iframe>
			</div>
		</div>
	</div>
}

templ FileAudioTemplate(r *Renderer, p *FileAudioRenderParams) {
	<div id={"block" + p.Id } class={"block blockMedia"}>
		<div class="content">
			<div class="flex">
				<audio controls src={ p.Src }></audio>
			</div>
		</div>
	</div>
}

templ FileVideoTemplate(r *Renderer, p *FileVideoRenderParams) {
	<div id={"block" + p.Id } class={"block blockMedia"}>
		<div class="content">
			<div class="flex">
				<video controls width="100%">
					<source src={ p.Src} />
				</video>
			</div>
		</div>
	</div>
}
