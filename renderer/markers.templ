package renderer

templ BulletMarkerTemplate() {
	<div class="markers">
		<div class="marker bullet">
			<span id="marker-" class="markerInner c3">
			</span>
		</div>
	</div>
}

templ InlineEmojiTemplate(emojiPath, sizeClass string) {
	<markupemoji contenteditable="false">
		<smile>
			@EmojiTemplate(emojiPath, sizeClass)
		</smile>
	</markupemoji>
}

templ EmojiTemplate(emojiPath, sizeClass string) {
	<div class={"iconObject", "isPage", sizeClass}>
		<div class="iconEmoji">
			<img src={emojiPath} class={"iconCommon", sizeClass}>
		</div>
	</div>

}

templ AdditionalEmojiTemplate(emojiPath string) {
	<div class="additional">
		@EmojiTemplate(emojiPath, "c20")
	</div>
}

templ AdditionalQuoteTemplate() {
	<div class="additional">
		<div class="line"></div>
	</div>
}
